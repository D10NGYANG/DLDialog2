<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础弹窗样式 -->
    <style name="D10ng.Dialog2.Style.Normal" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- 弹窗外框样式 -->
    <style name="D10ng.Dialog2.Box.Style" parent="D10ng.Dialog2.Style.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_dialog_default</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <!-- 加载中弹窗外框样式 -->
    <style name="D10ng.Dialog2.Box.Style.JustLoading" parent="D10ng.Dialog2.Style.Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_dialog_just_loading</item>
    </style>

    <!-- 标题外框样式 -->
    <style name="D10ng.Dialog2.Box.Style.Title" parent="D10ng.Dialog2.Style.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <!-- 内容外框样式 -->
    <style name="D10ng.Dialog2.Box.Style.Content" parent="D10ng.Dialog2.Box.Style.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 操作按钮外框样式 -->
    <style name="D10ng.Dialog2.Box.Style.ActionButton" parent="D10ng.Dialog2.Style.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">77dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12.5dp</item>
        <item name="android:paddingEnd">12.5dp</item>
    </style>

    <!-- 标题字体样式 -->
    <style name="D10ng.Dialog2.Text.Style.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorDialogTitleText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 内容字体样式 -->
    <style name="D10ng.Dialog2.Text.Style.Content" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDialogContentText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <!-- 提示字体样式 -->
    <style name="D10ng.Dialog2.Text.Style.Hint" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDialogHintText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <!-- 错误字体样式 -->
    <style name="D10ng.Dialog2.Text.Style.Error" parent="D10ng.Dialog2.Text.Style.Hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDialogErrorText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <!-- 操作按钮-取消样式 -->
    <style name="D10ng.Dialog2.Button.Style.Action0" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_button_0</item>
        <item name="android:layout_marginStart">12.5dp</item>
        <item name="android:layout_marginEnd">12.5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDialogContentText</item>
    </style>

    <!-- 操作按钮-确定样式 -->
    <style name="D10ng.Dialog2.Button.Style.Action1" parent="D10ng.Dialog2.Button.Style.Action0">
        <item name="android:background">@drawable/bg_button_1</item>
        <item name="android:textColor">@color/colorDialogOnTheme</item>
    </style>

    <!-- 输入框样式 -->
    <style name="D10ng.Dialog2.EditText.Style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorDialogContentText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:hint">请输入</item>
        <item name="android:textColorHint">@color/colorDialogHintText</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/bg_text_input_layout</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>